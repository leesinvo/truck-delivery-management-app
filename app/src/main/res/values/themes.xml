<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.TruckDelivery" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/blue_40</item>
        <item name="colorPrimaryVariant">@color/blue_80</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/blue_grey_40</item>
        <item name="colorSecondaryVariant">@color/blue_grey_80</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/light_background</item>
        <item name="colorSurface">@color/light_surface</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Error colors -->
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/white</item>

        <!-- Custom attributes -->
        <item name="colorSuccess">@color/success_green</item>
        <item name="colorWarning">@color/warning_yellow</item>
        <item name="colorInfo">@color/info_blue</item>

        <!-- Shape styles -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.TruckDelivery.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.TruckDelivery.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.TruckDelivery.LargeComponent</item>

        <!-- Typography styles -->
        <item name="textAppearanceDisplayLarge">@style/TextAppearance.TruckDelivery.DisplayLarge</item>
        <item name="textAppearanceDisplayMedium">@style/TextAppearance.TruckDelivery.DisplayMedium</item>
        <item name="textAppearanceDisplaySmall">@style/TextAppearance.TruckDelivery.DisplaySmall</item>
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.TruckDelivery.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.TruckDelivery.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.TruckDelivery.HeadlineSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.TruckDelivery.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.TruckDelivery.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.TruckDelivery.BodySmall</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.TruckDelivery.LabelLarge</item>
        <item name="textAppearanceLabelMedium">@style/TextAppearance.TruckDelivery.LabelMedium</item>
        <item name="textAppearanceLabelSmall">@style/TextAppearance.TruckDelivery.LabelSmall</item>
    </style>

    <!-- Shape Appearances -->
    <style name="ShapeAppearance.TruckDelivery.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.TruckDelivery.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.TruckDelivery.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Typography Styles -->
    <style name="TextAppearance.TruckDelivery.DisplayLarge" parent="TextAppearance.Material3.DisplayLarge">
        <item name="android:textSize">32sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textFontWeight">700</item>
    </style>

    <style name="TextAppearance.TruckDelivery.DisplayMedium" parent="TextAppearance.Material3.DisplayMedium">
        <item name="android:textSize">28sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textFontWeight">700</item>
    </style>

    <style name="TextAppearance.TruckDelivery.DisplaySmall" parent="TextAppearance.Material3.DisplaySmall">
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="TextAppearance.TruckDelivery.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">22sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textFontWeight">600</item>
    </style>

    <style name="TextAppearance.TruckDelivery.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textFontWeight">600</item>
    </style>

    <style name="TextAppearance.TruckDelivery.HeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textFontWeight">600</item>
    </style>

    <style name="TextAppearance.TruckDelivery.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.TruckDelivery.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.25</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.TruckDelivery.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.4</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.TruckDelivery.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.TruckDelivery.LabelMedium" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.5</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.TruckDelivery.LabelSmall" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0.5</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
</resources>
